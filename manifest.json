{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Tüm Listem Extension",
  "description": "Farklı sitelerdeki ürünleri tek sepette topla.",
  "icons": {
    "48": "images/extension_48.png"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "tum-listem@extension.js"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["storageHelper.js", "contentScript.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["indexedDB-helper.js", "webpage-content-script.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tüm Listem Extension",
    "default_icon": "images/extension_48.png"
  }
}
