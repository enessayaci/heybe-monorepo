{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/add-product",
      "dest": "/api/add-product.js"
    },
    {
      "src": "/api/get-products",
      "dest": "/api/get-products.js"
    },
    {
      "src": "/api/delete-product",
      "dest": "/api/delete-product.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
